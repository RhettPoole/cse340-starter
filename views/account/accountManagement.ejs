  <% if (messages && messages.error && messages.error.length > 0) { %>
    <% messages.error.forEach(function(msg){ %>
      <div class="flash flash-error"><%= msg %></div>
    <% }) %>
  <% } %>
  <% if (messages && messages.success && messages.success.length > 0) { %>
    <% messages.success.forEach(function(msg){ %>
      <div class="flash flash-success"><%= msg %></div>
    <% }) %>
  <% } %>
  <% if (title) { %>
    <h1><%= title %></h1>
  <% } %>
  <div class="account-info">
    <% if (locals.loggedin && (locals.accountData.account_type === "Employee" || locals.accountData.account_type === "Admin")) { %>
      <!-- Admin/Employee view -->
      <h2>Welcome, <%= locals.accountData.account_firstname %> </h2>
      <p><a href="/account/update/<%= locals.accountData.account_id %>">Update Account Information</a></p>
      <h3>Inventory Management</h3>
      <p><a href="/inv/">Manage Inventory</a></p>
      <% } else { %>
      <!-- When client is logged in, only show first name greeting and  login/logout button -->
      <h2>Welcome, <%= locals.accountData.account_firstname %></h2>
      <p><a href="/account/update/<%= locals.accountData.account_id %>">Update Account Information</a></p>
    <% } %>
  </div>
