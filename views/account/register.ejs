<main>
  <% if (typeof noticeMessages !== "undefined" && noticeMessages.length > 0) { %>
  <div class="flash flash-notice"><%= noticeMessages[0] %></div>
  <% } %>
  <% if (title) { %>
  <h1><%= title %></h1>
  <% } %>
  <div id="register-form">
    <form action="/account/register" method="post">
      <label for="account_firstname">First Name:</label><br />
      <input
        type="text"
        id="account_firstname"
        name="account_firstname"
        required placeholder="John"
      /><br />

      <label for="account_lastname">Last Name:</label><br />
      <input type="text" id="account_lastname" name="account_lastname" required placeholder="Doe"/><br />

      <label for="account_email">Email:</label><br />
      <input type="email" id="account_email" name="account_email" required placeholder="example@email.com"/><br />

      <label for="account_password">Password:</label><br />
      <input
        type="password"
        id="account_password"
        name="account_password"
        required placeholder="Yourpassword"
        required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
      /><br />
      <i>
        <p>* All fields are required!</p>
        <p>
          * Password must be at least 12 characters in length, contain at least
          1 capital letter, contain at least 1 number, and contain at least 1
          special character.
        </p>
      </i>
      <button id="register_button">Register</button><br />
    </form>
  </div>
</main>
